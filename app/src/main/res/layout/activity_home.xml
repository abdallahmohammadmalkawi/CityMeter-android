<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/noiseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Noise level:"
        app:layout_constraintBottom_toTopOf="@+id/noiseBar" />

    <ProgressBar
        android:id="@+id/noiseBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toTopOf="@+id/navigation" />


    <include
        android:id="@+id/navigation"
        layout="@layout/nav_tab_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/home_left_bar"
        android:layout_width="23dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:enabled="false"
        android:background="#0B3B0B"
        app:layout_constraintBottom_toTopOf="@+id/noiseText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home" />

    <Button
        android:id="@+id/home_right_bar"
        android:layout_width="23dp"
        android:layout_height="0dp"
        android:enabled="false"
        android:background="#0B3B0B"
        app:layout_constraintBottom_toTopOf="@+id/noiseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:background="#F2F2F6"
        app:layout_constraintEnd_toStartOf="@+id/home_left_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/home_right_bar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home">

        <Button
            android:id="@+id/button"
            android:layout_width="152dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:background="#D8D8D8"
            android:text="It is not my place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <TextView
            android:id="@+id/home_mylocation"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Home"
            android:textColor="#0B2161"
            android:textSize="45dp"
            app:layout_constraintStart_toEndOf="@+id/home_text1"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:enabled="false"
            android:text="575 W. Madison st. "
            android:textColor="#252525"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_text1" />

        <TextView
            android:id="@+id/home_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="You are at"
            android:textColor="#1C1C1C"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="97dp"
        app:layout_constraintEnd_toStartOf="@+id/home_left_bar"
        app:layout_constraintStart_toEndOf="@+id/home_right_bar"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/home_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Air Pollution"
            android:textColor="#1C1C1C"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/colorBar"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/color_coded_bar"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_text3" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/home_left_bar"
        app:layout_constraintStart_toEndOf="@+id/home_right_bar"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/home_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noise"
            android:textColor="#1C1C1C"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="322dp"
        android:layout_height="74dp"
        app:layout_constraintStart_toEndOf="@+id/home_right_bar"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/home_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Take Action"
            android:textColor="#1C1C1C"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>