<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CognitiveTestFragments.Test_Q10Fragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/testQ11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="11. Solve the following problem:"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/testQ11Sub1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="- Beginning with 4 triangles."
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11" />

        <TextView
            android:id="@+id/testQ11Sub2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="127dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="- Cross out 2 lines (mark with an X)."
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub1" />

        <TextView
            android:id="@+id/testQ11Sub3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="222dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="- Leaving 3 triangles. "
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub2" />

        <TextView
            android:id="@+id/testQ11Sub4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="- Each line must be part of a complete triangle. \n(no extra lines)"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub3" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/q11"
            app:layout_constraintBottom_toTopOf="@+id/testQ10Canvas2"
            app:layout_constraintEnd_toStartOf="@+id/testQ10Canvas1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="→"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toStartOf="@+id/testQ10Canvas2"
            app:layout_constraintTop_toTopOf="@+id/testQ10Canvas2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:layout_marginTop="52dp"
            android:text="→"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="*4 triangles"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="* Draw answer here. 3 trianges."
            android:textColor="#FF0000"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="* Cross out 2 lines.\nMark with an X."
            android:textColor="#FF0000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/testQ10Canvas1"
            app:layout_constraintStart_toStartOf="@+id/testQ10Canvas1"
            app:layout_constraintTop_toBottomOf="@+id/testQ10Canvas1" />

        <FrameLayout
            android:id="@+id/testQ10Canvas1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/q11"
            app:layout_constraintBottom_toTopOf="@+id/testQ10Canvas2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub4"
            app:layout_constraintVertical_bias="0.0"></FrameLayout>

        <FrameLayout
            android:id="@+id/testQ10Canvas2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="57dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="190dp"
            android:background="#DDDDDD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testQ11Sub4"
            app:layout_constraintVertical_bias="1.0"></FrameLayout>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>