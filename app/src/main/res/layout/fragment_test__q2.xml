<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CognitiveTestFragments.Test_Q2Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12">

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/testQ1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="2. Name the following pictures"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/testQ1Sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text=" (Donâ€™t worry about spelling) "
                android:textColor="#000000"
                android:textSize="15dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/testQ2Pic1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/rhino" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/testQ2A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Answer" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/testQ2Pic2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/harp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/testQ2A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Answer" />
        </TableRow>
    </TableLayout>

</FrameLayout>